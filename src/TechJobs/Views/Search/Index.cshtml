 @*<h1>@ViewBag.title</h1>*@

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key" 
                       checked="@column.Key == 'all''"/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields
    @if (ViewBag.jobs.Count >0)
    {
        foreach (Dictionary<string, string> dictionary in ViewBag.jobs)
        {
            <table class="job-listing">
                @*if the html doesn't have its partner/html, it will look for the @ symbol to
                    indicate you are adding C# code to you html*@
                @foreach (KeyValuePair<string, string> kvp in dictionary)
                    {
                        <tr>
                            <td>
                                <strong>@kvp.Key</strong>
                            </td>
                            <td>
                                @kvp.Value
                            </td>
                        </tr>
                    }
            </table>
        }

    }
    
}