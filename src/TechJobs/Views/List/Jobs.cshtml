<h1>@ViewBag.title</h1>

<h3>@ViewBag.jobs.Count Result(s)</h3>

@{ 
    // TODO #3 - Use the same list display from Views/Search/Index.cshtml
      @if (ViewBag.jobs.Count >0)
    {
        foreach (Dictionary<string, string> dictionary in ViewBag.jobs)
        {
            <table class="job-listing">
                @*if the html doesn't have its partner/html, it will look for the @ symbol to
                    indicate you are adding C# code to you html*@
                @foreach (KeyValuePair<string, string> kvp in dictionary)
                    {
                        <tr>
                            <td>
                                <strong>@kvp.Key</strong>
                            </td>
                            <td>
                                @kvp.Value
                            </td>
                        </tr>
                    }
            </table>
        }

    }

}